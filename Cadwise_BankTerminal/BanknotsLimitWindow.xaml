<Window x:Class="CadwiseTest2.BanknotsLimitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadwiseTest2_version2"
        mc:Ignorable="d"
        Title="Bank Terminal" SizeToContent="Height" Width="300">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <TextBlock Text="Set the banknots amount limit." HorizontalAlignment="Left"  Width="auto" Margin="0,10,0,10"></TextBlock>
            <TextBox  Width="50"  HorizontalAlignment="Left" Text="{Binding Limit,UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Height="25" Width="75" Margin="0,10,10,0" Content="Ok" HorizontalAlignment="Right" Click="OkClick"></Button>
        </StackPanel>
    </Grid>
</Window>
